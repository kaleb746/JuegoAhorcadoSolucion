<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorFondo">#F4F4FA</Color>
    <Color x:Key="ColorPrimario">#2D2C32</Color>
    <Color x:Key="ColorSecundario">#7E7B8D</Color>
    <Color x:Key="ColorMenuLateral">#EDEDFE</Color>
    <Color x:Key="ColorBorde">#D3D1DB</Color>
    <Color x:Key="ColorPeligro">#FF1654</Color>
    <Color x:Key="ColorExito">#00AB64</Color>
    <Color x:Key="ColorAdvertencia">#F3BB19</Color>
    <Color x:Key="ColorBotonPrimario">#1E52CB</Color>
    <Color x:Key="ColorBotonPrimarioHover">#2B60DA</Color>
    <Color x:Key="ColorBotonSecundario">#EFEDF7</Color>
    <Color x:Key="ColorBotonSecundarioHover">#F0EDFC</Color>

    <SolidColorBrush x:Key="PincelFondo" Color="{StaticResource ColorFondo}"/>
    <SolidColorBrush x:Key="PincelPrimario" Color="{StaticResource ColorPrimario}"/>
    <SolidColorBrush x:Key="PincelSecundario" Color="{StaticResource ColorSecundario}"/>
    <SolidColorBrush x:Key="PincelMenuLateral" Color="{StaticResource ColorMenuLateral}"/>
    <SolidColorBrush x:Key="PincelBorde" Color="{StaticResource ColorBorde}"/>
    <SolidColorBrush x:Key="PincelBotonPrimario" Color="{StaticResource ColorBotonPrimario}"/>
    <SolidColorBrush x:Key="PincelBotonPrimarioHover" Color="{StaticResource ColorBotonPrimarioHover}"/>
    <SolidColorBrush x:Key="PincelBotonSecundario" Color="{StaticResource ColorBotonSecundario}"/>
    <SolidColorBrush x:Key="PincelBotonSecundarioHover" Color="{StaticResource ColorBotonSecundarioHover}"/>
    <SolidColorBrush x:Key="PincelExito" Color="{StaticResource ColorExito}"/>
    <SolidColorBrush x:Key="PincelAdvertencia" Color="{StaticResource ColorAdvertencia}"/>
    <SolidColorBrush x:Key="PincelPeligro" Color="{StaticResource ColorPeligro}"/>

</ResourceDictionary>