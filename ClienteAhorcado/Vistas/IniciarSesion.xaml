<Window x:Class="ClienteAhorcado.Vistas.IniciarSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteAhorcado.Vistas"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="IniciarSesion" Height="450" Width="800">

    <StackPanel Orientation="Vertical" Width="200">
        <Button x:Name="BtnIniciarSesion"
                Content="IniciarSesion"
                Style="{DynamicResource EstiloBotonPrincipal}"
                Margin="0,12,0,6"
                Click="Click_IniciarSesion"
                Width="150">
        </Button>

        <TextBox x:Name="TbAmount"
                Style="{DynamicResource EstiloTextBox}" 
                Tag="Correo"
                Margin="0 0 0 0" />
    </StackPanel>
   
</Window>
